<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2CFFF"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragments.ExampleImageFragment">

    <ImageView
        android:id="@+id/img_frag_example"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:contentDescription="@string/img_desc_pokemon"
        />

    <Button
        android:id="@+id/btn_frag_example_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/btn_test"
        android:textSize="25sp"
        android:backgroundTint="#0f0"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        />

</LinearLayout>